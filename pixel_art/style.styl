container-mix()
  margin: auto
  width: calc(80% - 80px)

round-border()
  border-style: none
  border-radius: 50%

round-corner()
  border-style: none
  border-radius: 7px

btn-generator(y, x)
  round-corner()
  padding: y x

lobster = 'Lobster', cursive
montserrant = 'Montserrat', sans-serif

*
  box-sizing: border-box
  font-family: montserrant
  padding: 0
  margin: 0
  
.board-inputs
  background-color: #39C18C
  padding: 2px 0
  padding-left: 10px
  outline: none
  round-corner()
  min-width: 200px
  &:hover
    background-color: #8cffd1
    border: none
  &::placeholder
    color: #171717;


.btn
  background-color: #a5a5a5;
  btn-generator(5px, 25px)
  &:hover
    background-color: #a50000

.canvas-article
  container-mix()

.canvas-config
  margin: 2rem 0

#clear-board
  margin-top: 15px

.container
  margin: auto
  text-align: center
  width: calc(80% - 80px)

.config-article
  margin: 0 1rem

.color
  round-border()
  border: 1px solid #171717
  display: inline-block
  height: 50px
  width: @height
  &:nth-child(1)
    background-color: black

#color-palette
  background-color: #ffffff
  btn-generator(2px, 10px)
    
.board-btn
  btn-generator(2px, 15px)
  background-color: #39C18C
  margin-top: 0.5rem

.pixel
  border: 1px solid black
  display: inline-block
  background-color: white

#pixel-board
  margin: auto
  height: 700px
  width: @height
  :nth-child(1)
    :nth-last-child(1)
      border-radius: 0 7px 0 0
    :nth-child(1)
      border-radius: 7px 0 0 0
  :nth-last-child(1)
    :nth-last-child(1)
      border-radius: 0 0 7px 0
    :nth-child(1)
      border-radius: 0 0 0 7px

.pixel-row
  display: flex

body
  background-color: #260049

header
  background-color #39C18C
  padding: 1.5rem
  .container
    display: flex

h1
  font-family: lobster

main
  padding-top: 3rem
  .container
    display: flex
    align-items: flex-start